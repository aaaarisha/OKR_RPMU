<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Василькова Арина 68МС Вариант 2"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Изображение фигуры -->
    <ImageView
        android:id="@+id/figureImage"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/figure"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Формула -->
    <ImageView
        android:id="@+id/formulaImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/formula"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/figureImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Поля для ввода d1 -->
    <EditText
        android:id="@+id/editD1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="d1"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@id/editD2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formulaImage" />

    <!-- Поля для ввода d2 -->
    <EditText
        android:id="@+id/editD2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="d2"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@id/editGamma"
        app:layout_constraintStart_toEndOf="@id/editD1"
        app:layout_constraintTop_toBottomOf="@id/formulaImage" />

    <!-- Поля для ввода угла γ -->
    <EditText
        android:id="@+id/editGamma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="γ"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editD2"
        app:layout_constraintTop_toBottomOf="@id/formulaImage" />

    <!-- Кнопка "Рассчитать" -->
    <Button
        android:id="@+id/calculateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Рассчитать"
        app:layout_constraintEnd_toStartOf="@id/resultText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editD1" />

    <!-- Поле для вывода результата -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Результат"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/editD1"
        app:layout_constraintStart_toEndOf="@id/calculateButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
